{% if tokenForm is defined %}
{% set form = tokenForm %}
<form 
    id     = "cerad_account_token_form"
    class  = "cerad_account_token_form" 
    action = "{{ path('cerad_account_password_reset_check_email') }}"
    method = "post"
    {{ form_enctype(form) }}
 >
    <fieldset>
        {{ form_row(form.token, { 'label': 'Enter confirmation number from email'}) }}
    </fieldset>
    <fieldset>
        {% if error is defined %}{% if error %}
            <div style="color:red;">{{ error }}</div>
        {% endif %}{% endif %}
        <div class="cerad_common_form_controls controls">
            <span></span>
            <input type="submit" name="accountToken" value="Submit" />
        </div>
    </fieldset>
<div style="display: none;">{{ form_rest(form) }}</div>
</form>
{% endif %}
